#include<stdio.h>
#include<stdlib.h>
#include<time.h>

int main(){
	srand(time(NULL));
    
	int numeros[52]={11, 2, 3, 4, 5, 6, 7, 8, 9, 10, 10, 10, 10, 11, 2, 3, 4, 5, 6, 7, 8, 9, 10, 10, 10, 10, 11, 2, 3, 4, 5, 6, 7, 8, 9, 10, 10, 10, 10, 11, 2, 3, 4, 5, 6, 7, 8, 9, 10, 10, 10, 10 };
	int num,num2,blackjack,cont,opcion,aux,suma,sumafin;
   	
	
	num=numeros[rand()%52];
    aux=num;

	printf("Esta es tu carta %d  \n",num);
	
	
while(opcion!=2){
	
	printf("Quiere otra carta?....1=si, 2=no\n");
	scanf("%d",&opcion);
	
	
	if(opcion==1){
		suma=aux+(numeros[rand()%52]);
	
		
		printf("Esta es tu nueva cantidad %d \n",suma);
		
		 if(suma==21){
		 	
		 	printf("Ganaste!!!\n\n");
		 	opcion=2;
		 }
		 if(suma>21){
			printf("Perdiste tienes mas de 21");
			opcion=2;
		}
	}
		else{
			printf("Ha perdido");
			opcion=2;
			
		}
		}
	return 0;
}
